    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="using:CMScoutIntrinsic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.TopAppBar>
        <CommandBar
            HorizontalContentAlignment="Stretch"
            IsDynamicOverflowEnabled="False"
            x:Name="CommandBar">
            <CommandBar.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <m:AppBarButton
                        Grid.Row="0" Grid.Column="0"
                        Icon="Back" Label="Back"
                        IsCompact="{Binding ElementName=CommandBar, Path=IsOpen, Converter={StaticResource InverseBooleanConverter}}"
                        Command="{Binding Back}" />
                </Grid>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>

    <Grid
        Background="{ThemeResource PageBackgroundThemeBrush}">
        <Grid.Resources>
            <SolidColorBrush x:Key="LeftBrush"  Color="Green"  />
            <SolidColorBrush x:Key="RightBrush" Color="Red"    />
            <SolidColorBrush x:Key="SameBrush"  Color="Yellow" />

            <Style x:Key="PlayerHeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
            
            <Style x:Key="PlayerSubheaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
            
            <Style x:Key="AttributeNameTextBlockStyle" TargetType="TextBlock">
            </Style>
            
            <Style x:Key="AttributeLeftValueTextBlockStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right" />
                <Setter Property="Foreground"    Value="{StaticResource LeftBrush}" />
            </Style>
            <Style x:Key="AttributeRightValueTextBlockStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right" />
                <Setter Property="Foreground"    Value="{StaticResource RightBrush}" />
            </Style>
            <Style x:Key="AttributeSameValueTextBlockStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right" />
                <Setter Property="Foreground"    Value="{StaticResource SameBrush}" />
            </Style>

            <Style x:Key="AttributeValueRectangleStyle" TargetType="Rectangle">
                <Setter Property="Width"               Value="24" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>

            <m:ComparePlayersToAttributeValueConverter x:Key="ComparePlayersToAttributeValueConverter" />

            <m:ComparePlayersToAttributeValueBackgroundConverter
                x:Key="ComparePlayersToAttributeValueBackgroundConverter"
                LeftPlayer="{Binding LeftPlayer}"
                RightPlayer="{Binding RightPlayer}"
                HighlightBrush="#FFC0C0C0" />

            <m:ComparePlayersToAttributeValueStyleConverter 
                x:Key="ComparePlayersToAttributeValueStyleConverter"
                LeftPlayer="{Binding LeftPlayer}"
                RightPlayer="{Binding RightPlayer}"
                LeftStyle="{StaticResource AttributeLeftValueTextBlockStyle}"
                RightStyle="{StaticResource AttributeRightValueTextBlockStyle}"
                SameStyle="{StaticResource AttributeSameValueTextBlockStyle}" />

            <m:ConditionConverter x:Key="WindowsHeightToFullLayoutVisibilityConverter" Condition="&lt;" OnRight="743" IfTrue="Collapsed" IfFalse="Visible" />

        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock 
            Grid.Row="0" Grid.Column="0"
            Text="{Binding LeftPlayer, Converter={StaticResource PlayerToHeaderStringConverter}}"
            Style="{StaticResource PlayerHeaderTextBlockStyle}"
            Foreground="{StaticResource LeftBrush}"
            HorizontalAlignment="Center" />
        <TextBlock 
            Grid.Row="0" Grid.Column="1"
            Text="{Binding RightPlayer, Converter={StaticResource PlayerToHeaderStringConverter}}"
            Style="{StaticResource PlayerHeaderTextBlockStyle}"
            Foreground="{StaticResource RightBrush}"
            HorizontalAlignment="Center" />

        <TextBlock 
