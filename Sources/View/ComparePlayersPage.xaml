            Text="{Binding LeftPlayer, Converter={StaticResource PlayerToSubheaderStringConverter}}"
            Style="{StaticResource PlayerSubheaderTextBlockStyle}"
            Foreground="{StaticResource LeftBrush}"
            HorizontalAlignment="Center"
            Margin="0,8,0,0"
            Visibility="{Binding Source={StaticResource xStatic}, Path=App.WindowHeight, Converter={StaticResource WindowsHeightToFullLayoutVisibilityConverter}}" />
